<Window x:Class="VPNApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VPN - Change Your IP Location" 
        Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="550"
        MinHeight="600"
        Background="#F5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,20">
            <!-- Logo -->
            <Canvas Width="48" Height="48" Margin="0,0,10,0">
                <Ellipse Width="48" Height="48" 
                         Fill="#3498DB" 
                         Stroke="#2980B9" 
                         StrokeThickness="2"/>
                <!-- Globe/Network Icon -->
                <Path Data="M 14,14 L 24,10 L 34,14 L 34,24 L 24,28 L 14,24 Z M 14,14 L 24,18 L 34,14 M 14,24 L 24,20 L 34,24 M 24,10 L 24,28" 
                      Stroke="White" 
                      StrokeThickness="2"/>
                <!-- Lock Icon -->
                <Rectangle Canvas.Left="18" Canvas.Top="30" 
                           Width="12" Height="9" 
                           Fill="White" 
                           Stroke="White" 
                           StrokeThickness="1" 
                           RadiusX="1.5" 
                           RadiusY="1.5"/>
                <Path Canvas.Left="20" Canvas.Top="26" 
                      Data="M 20,26 L 20,22 Q 20,19 24,19 Q 28,19 28,22 L 28,26" 
                      Stroke="White" 
                      StrokeThickness="1.5"/>
            </Canvas>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="VPN Location Changer" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"/>
                <TextBlock Text="Change Your IP to Any Country" 
                           FontSize="11" 
                           Foreground="#7F8C8D" 
                           Margin="0,2,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Current Status -->
        <Border Grid.Row="1" 
                Background="#ECF0F1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Connection Status" 
                          FontWeight="Bold" 
                          FontSize="12" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="StatusText" 
                          Text="Disconnected" 
                          FontSize="16" 
                          Foreground="#E74C3C"
                          FontWeight="SemiBold"/>
                <TextBlock x:Name="StatusDetails" 
                          Text="Not connected to any VPN server" 
                          FontSize="12" 
                          Foreground="#95A5A6" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Country Selection -->
        <TextBlock Grid.Row="2" 
                   Text="Select Country:" 
                   FontWeight="SemiBold" 
                   FontSize="14" 
                   Margin="5,0,5,5"
                   Foreground="#34495E"/>
        <ComboBox x:Name="CountryComboBox" 
                  Grid.Row="3" 
                  SelectionChanged="CountryComboBox_SelectionChanged"
                  DisplayMemberPath="Country"
                  SelectedValuePath="Id"/>

        <!-- Password -->
        <TextBlock Grid.Row="4" 
                   Text="Password (Optional):" 
                   FontWeight="SemiBold" 
                   FontSize="14" 
                   Margin="5,10,5,5"
                   Foreground="#34495E"/>
        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="5" 
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <!-- Buttons -->
        <Grid Grid.Row="6" Margin="0,20,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,8">
                <Button x:Name="ConnectButton" 
                        Content="ðŸ”’ Connect" 
                        Click="ConnectButton_Click" 
                        Background="#27AE60" 
                        Foreground="White" 
                        FontWeight="Bold"
                        BorderThickness="0"
                        IsEnabled="False"
                        Width="110"
                        Height="35"
                        Margin="0,0,8,0"/>
                <Button x:Name="DisconnectButton" 
                        Content="ðŸ”“ Disconnect" 
                        Click="DisconnectButton_Click" 
                        Background="#E74C3C" 
                        Foreground="White" 
                        FontWeight="Bold"
                        BorderThickness="0"
                        IsEnabled="False"
                        Width="110"
                        Height="35"
                        Margin="0,0,8,0"/>
                <Button x:Name="CheckIPButton" 
                        Content="ðŸ“ Check IP" 
                        Click="CheckIPButton_Click" 
                        Background="#3498DB" 
                        Foreground="White" 
                        FontWeight="Bold"
                        BorderThickness="0"
                        Width="110"
                        Height="35"
                        Margin="0,0,8,0"/>
            </StackPanel>
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button x:Name="ConfigureServersButton" 
                        Content="âš™ï¸ Configure Servers" 
                        Click="ConfigureServersButton_Click" 
                        Background="#8E44AD" 
                        Foreground="White" 
                        FontWeight="Bold"
                        BorderThickness="0"
                        Width="250"
                        Height="35"
                        ToolTip="Configure server IP addresses"/>
            </StackPanel>
        </Grid>

        <!-- Log/Info Area -->
        <Border Grid.Row="7" 
                Background="White" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                CornerRadius="5" 
                Margin="0,10,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogTextBlock" 
                          Text="Welcome to VPN Location Changer!&#x0a;&#x0a;Select a country and click Connect to change your IP address.&#x0a;&#x0a;Make sure your Python VPN server is running in the selected country." 
                          TextWrapping="Wrap" 
                          Padding="15" 
                          FontSize="12"
                          Foreground="#34495E"/>
            </ScrollViewer>
        </Border>

        <!-- Current IP Display -->
        <Border Grid.Row="8" 
                Background="#E8F5E9" 
                CornerRadius="5" 
                Padding="10" 
                BorderBrush="#4CAF50" 
                BorderThickness="1"
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Your Current IP:" 
                          FontWeight="Bold" 
                          FontSize="12" 
                          Foreground="#2E7D32" 
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="CurrentIPText" 
                          Text="Not checked yet" 
                          FontSize="14" 
                          Foreground="#1B5E20"
                          FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- PayPal Donation Button -->
        <Border Grid.Row="9" 
                Background="#F8F9FA" 
                CornerRadius="5" 
                Padding="15" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                <TextBlock Text="Support this project:" 
                          FontSize="12" 
                          Foreground="#7F8C8D" 
                          VerticalAlignment="Center" 
                          Margin="0,0,10,0"/>
                <Button x:Name="PayPalDonateButton" 
                       Click="PayPalDonateButton_Click" 
                       Background="#0070BA" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       Padding="15,8" 
                       Cursor="Hand"
                       BorderThickness="0"
                       BorderBrush="Transparent"
                       Height="35">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’³" 
                                  FontSize="16" 
                                  Margin="0,0,8,0" 
                                  VerticalAlignment="Center"
                                  Foreground="White"/>
                        <TextBlock Text="Donate with PayPal" 
                                  FontSize="13" 
                                  VerticalAlignment="Center"
                                  Foreground="White"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>

