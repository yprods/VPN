<Window x:Class="VPNApp.ServerConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure VPN Servers" 
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="ðŸ”§ Configure VPN Servers" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Add or edit server IP addresses for each country" 
                       FontSize="12" 
                       Foreground="#7F8C8D"/>
        </StackPanel>

        <!-- Server List -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ServersItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1" 
                                    CornerRadius="5" 
                                    Margin="0,0,0,10" 
                                    Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Country Flag and Name -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,15,10">
                                        <TextBlock Text="{Binding Flag}" FontSize="24" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Country}" 
                                                   FontSize="16" 
                                                   FontWeight="Bold" 
                                                   Foreground="#2C3E50"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Server IP -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                        <TextBlock Text="Server IP Address:" 
                                                   FontSize="11" 
                                                   Foreground="#7F8C8D" 
                                                   Margin="0,0,0,5"/>
                                        <TextBox x:Name="ServerIPTextBox" 
                                                 Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}" 
                                                 FontSize="14" 
                                                 Padding="8"
                                                 Background="White"
                                                 BorderBrush="#BDC3C7"
                                                 BorderThickness="1"/>
                                    </StackPanel>

                                    <!-- Port -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                                        <TextBlock Text="Port:" 
                                                   FontSize="11" 
                                                   Foreground="#7F8C8D" 
                                                   Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" 
                                                 FontSize="14" 
                                                 Padding="8"
                                                 Width="100"
                                                 Background="White"
                                                 BorderBrush="#BDC3C7"
                                                 BorderThickness="1"/>
                                    </StackPanel>

                                    <!-- Status Indicator -->
                                    <StackPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right">
                                        <Border Background="{Binding StatusColor}" 
                                                CornerRadius="3" 
                                                Padding="8,4"
                                                Margin="0,0,0,5">
                                            <TextBlock Text="{Binding StatusText}" 
                                                       FontSize="10" 
                                                       Foreground="White" 
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding Description}" 
                                               FontSize="11" 
                                               Foreground="#95A5A6" 
                                               Margin="0,10,0,0"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Info Panel -->
        <Border Grid.Row="2" 
                Background="#E3F2FD" 
                BorderBrush="#90CAF9" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,15,0,15">
            <StackPanel>
                <TextBlock Text="â„¹ï¸ Information" 
                          FontWeight="Bold" 
                          FontSize="12" 
                          Foreground="#1976D2" 
                          Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap" 
                          FontSize="11" 
                          Foreground="#1565C0">
                    <Run Text="â€¢ Enter the IP address of your VPN server running "/>
                    <Run Text="vpn_server.py" FontWeight="Bold"/>
                    <Run Text=" in the target country"/>
                    <LineBreak/>
                    <Run Text="â€¢ Default port is 8888. Change only if your server uses a different port"/>
                    <LineBreak/>
                    <Run Text="â€¢ Servers with placeholder IPs (your_*_server_ip) will show as 'Not Configured'"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="TestConnectionButton" 
                    Content="ðŸ” Test Selected" 
                    Click="TestConnectionButton_Click" 
                    Background="#3498DB" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    BorderThickness="0"
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Width="130"
                    Height="35"/>
            <Button x:Name="SaveButton" 
                    Content="ðŸ’¾ Save Changes" 
                    Click="SaveButton_Click" 
                    Background="#27AE60" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    BorderThickness="0"
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Width="130"
                    Height="35"/>
            <Button x:Name="CancelButton" 
                    Content="âŒ Cancel" 
                    Click="CancelButton_Click" 
                    Background="#7F8C8D" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    BorderThickness="0"
                    Padding="15,8"
                    Width="100"
                    Height="35"/>
        </StackPanel>
    </Grid>
</Window>

